<div class="section-border1"></div>
<div class="user-sign-in">
  <h2>ログイン</h2>
    <%= form_with model: @user, url: user_session_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
     <table class="table table-bordered new-table">
      	<tbody>
      		<tr class="table-row">
      			<th colspan="2" class="table-head"><%= f.label :"ユーザーネーム", class: "sign-in-text" %><br><%= f.text_field :user_name, autofocus: true, class: "sign-in-form" %>
      		</tr>
      		<tr class="table-row">
      			<th colspan="1" class="table-head">
      			  <%= f.label :"パスワード(6文字以上)", class: "sign-in-text" %><br>
              <%= f.password_field :password, autocomplete: "current-password", class: "sign-in-form" %>
            </th>
      		</tr>
      		<tr class="table-row">
      			<th colspan="1" class="table-head">
      			  <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :"保存する", class: "sign-in-text"  %>
                </div>
              <% end %>
            </th>
      		</tr>
      	</tbody>
      </table>

    <div class="actions">
      <div class="new-submit">
        <%= f.submit "ログイン", class: "btn btn-outline-secondary  mb-3" %>
      </div>
      <div class="new-submit">
        <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-outline-secondary new-submit mb-3" %>
      　<%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "login" %>
      </div>
     </div>
  <% end %>


</div>
