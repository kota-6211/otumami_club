<div class="user-sign-in">
  <h2>ログイン</h2>
    <%= form_with model: @user, url: user_session_path do |f| %>
     <table class="table table-bordered new-table">
      	<tbody>
      		<tr class="table-row">
      			<th colspan="2" class="table-head"><%= f.label :"ユーザーネーム" %><br><%= f.text_field :user_name, autofocus: true %>
      		</tr>
      		<tr class="table-row">
      			<th colspan="1" class="table-head">
      			  <%= f.label :"パスワード(6文字以上)" %><br>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </th>
      		</tr>
      		<tr class="table-row">
      			<th colspan="1" class="table-head">
      			  <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :"保存する" %>
                </div>
              <% end %>
            </th>
      		</tr>
      	</tbody>
      </table>

      <div class="actions">
        <div>
          <%= f.submit "ログイン", class: "btn btn-outline-secondary new-submit mb-3" %>
        </div>
        <div>
          <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-outline-secondary new-submit mb-3" %>
        </div>
        
     </div>
  <% end %>
    
   
</div>
