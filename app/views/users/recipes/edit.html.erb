<div class="container">
  <h2>Recipe Edit</h2>

  <%= form_with model: @recipe, url: recipe_path(@recipe), method: :patch do |f| %>
    <div class="row">
      <div class="col">
        <%= f.label :recipe_image, "おつまみ写真" %><br>
        <%= f.file_field :recipe_image, accept: "image/*" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <div class="form-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :alcohol_genre_id, 'お酒の種類' %>
          <%= f.collection_select(:alcohol_genre_id, AlcoholGenre.all, :id, :name, {}, class: 'form-control') %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :body, '内容' %>
      <%= f.text_area :body, rows: 3, class: 'form-control' %>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <%= f.label :point, 'ポイント' %>
          <%= f.text_field :point, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :cook_time, '調理時間' %>
          <%= f.text_field :cook_time, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :tag, 'タグ' %>
      <%= f.text_field :tag, value: @recipe.tags.pluck(:name), class: 'form-control' %>
      <small class="text-black-50">スペースで区切ることで複数指定できます。</small>
    </div>

    <div class="form-group mt-5">
      <div class="row">
        <div class="col-md-4 mx-auto">
          <%= f.submit '編集', class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    </div>
  <% end %>
</div>