<div class="container">
  <h2 class="mb-3"><%= @recipe.title %></h2>

  <%= image_tag @recipe.get_recipe_image(200,200) %>
  <% if user_signed_in? %>
    <% if @recipe.user != current_user %>
      <% if @recipe.saved_by?(current_user) %>
        <p>
          <%= link_to recipe_saved_recipes_path(@recipe), method: :delete do %>
            ♥ 保存済み
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to recipe_saved_recipes_path(@recipe), method: :post do %>
            ♡ 保存
          <% end %>
        </p>
      <% end %>
    <% end %>
  <% else %>
    <p>
      <%= "作り方はログイン後に保存できます" %>
      <%= link_to "ログイン", new_user_session_path %>
    </p>
  <% end %>

  <div class="row mb-3">
    <div class="col-md-6">
      <h6 class="font-weight-bold">よく合うお酒</h6>
      <%= @recipe.alcohol_genre.name %>
        <div class="mb-3">
          <h6 class="font-weight-bold">おつまみポイント</h6>
          <%= @recipe.point %>
        </div>

        <div class="mb-3">
          <h6 class="font-weight-bold">内容</h6>
          <%= simple_format(@recipe.body) %>
        </div>


        <div>
          <h6 class="font-weight-bold">
            タグ
          </h6>
          <% if @recipe.tags.count == 0 %>
            タグはありません
          <% else %>
            <ul>
              <% @recipe.tags.each do |tag| %>
                <li><%= link_to tag.name, tag_path(tag) %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <div class="mt-5">
          <% if user_signed_in? %>
            <% if current_user.id == @recipe.user_id %>
              <%= link_to '削除', recipe_path(@recipe), method: :delete, class: 'text-danger mr-3', data: {confirm: '削除しますか？'} %>
              <%= link_to '編集', edit_recipe_path(@recipe) %>
            <% end %>
          <% end %>
        </div>
    </div>
    <div class="col-md-6">
      <h6 class="font-weight-bold">調理時間</h6>
      <%= @recipe.cook_time %>

      <% @recipe.ingredients.each do |ingredient| %>
        <%= ingredient.name %>
        <%= ingredient.quantiry %>
      <% end %>

      <% @recipe.steps.each do |step| %>
        <%= step.step_number %>
        <%= step.discription %>
      <% end %>
    </div>

    <div class="row">
      <div class="col-6">
        <div>
          <p>コメント件数：<%= @recipe.comments.count %></p>
          <% @recipe.comments.each do |comment| %>
            <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
            <%= comment.user.user_name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
            <% if comment.user === current_user %>
              <%= link_to "削除", recipe_comment_path(comment.recipe,comment), method: :delete %>
            <% end %>
          <% end %>
        </div>
        <div>
          <% if user_signed_in? %>
            <%= form_with model: [@recipe, @comment] do |f| %>
              <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
              <%= f.submit "送信する" %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-6">
        <% if user_signed_in? %>
          <% if @recipe.favorited_by?(current_user) %>
            <p>
              <%= link_to recipe_favorites_path(@recipe), method: :delete do %>
                ♥<%= @recipe.favorites.count %> いいね
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to recipe_favorites_path(@recipe), method: :post do %>
                ♡<%= @recipe.favorites.count %> いいね
              <% end %>
            </p>
          <% end %>
        <% else %>
          <%= "ログインしていいね・コメントを送ろう" %><br>
          <%= link_to "ログイン", new_user_session_path %>
        <% end %>
      </div>
    </div>
  </div>


</div>