<div class="recipe-show d-flex">
  
  <div class="recipe-user-detail">
    <%= link_to user_path(@recipe.user_id) do %>
    <div class="recipe-user-profile">
      <h2>M A D E</h2>
      <h4>by</h4>
      <div class="user-image mt-3 mb-3">
        <%= image_tag @recipe.user.get_profile_image(200,200) %>
      </div>
      <div class="user-name">
        <%= @recipe.user.user_name %>
      </div>
      <div class="user-introduction">
        <%= @recipe.user.introduction %>
      </div>
      <div>
        <% if @recipe.user.favorite_alcohol.present? %>
          <%= "#" + @recipe.user.favorite_alcohol + "好き" %>
        <% end %>
      </div>
    </div>
     <% end %>
  </div>
  
  <div class="recipe-detail">
    <div class="recipe-detail-image mb-5">
      <%= image_tag @recipe.get_recipe_image(400,400) %>
    </div>
    <div  class="recipe-detail-title mt-5">
      <h3 class="mb-3"><%= "〜" + @recipe.title + "〜" %></h3>
    </div>
    <div>
      <%= @recipe.body %>
    </div>
    <div class="d-flex  mt-3 mb-4">
      <div>
        <h5 class="font-weight-bold">合うお酒</h5>
        <h4><%= @recipe.alcohol_genre.name %></h4>
      </div>
      <div class="ml-5"> 
        <h5 class="font-weight-bold">おつまみポイント</h5>
        <h4><%= @recipe.point %></h4>
      </div>
    </div>
  
    <div class="recipe-saved">
      <!--ログインしているか-->
      <% if user_signed_in? %>
        <!--自分の投稿は表示しない-->
        <% if @recipe.user != current_user %>
          <% if @recipe.saved_by?(current_user) %>
            <p>
              <%= link_to "保存済み", recipe_saved_recipes_path(@recipe), method: :delete, class: "btn btn-secondary" %>
            </p>
            <% else %>
            <p>
              <%= link_to "保存する", recipe_saved_recipes_path(@recipe), method: :post, class: "btn btn-outline-secondary" %>
            </p>
          <% end %>
        <% end %>
      <% else %>
        <p>
          <%= "おつまみはログイン後に保存できます" %>
          <%= link_to "ログイン", new_user_session_path %>
        </p>
      <% end %>
    </div>
    
    <div class="mb-5">
      <h6 class="font-weight-bold">調理時間</h6>
      <%= @recipe.cook_time %>
    </div>

    <div class="recipe-steps d-flex mt-3">
      <div class="w-50">
        <h6 class="font-weight-bold">材料</h6>
        <% @recipe.ingredients.each do |ingredient| %>
          <p>
            <%= ingredient.name %>
            <%= ingredient.quantiry %>
          </p>
        <% end %>
      </div>
      <div class="w-50">
        <h6 class="font-weight-bold">手順</h6>
        <% @recipe.steps.each do |step| %>
          <p>
            <%= step.step_number %>
            <%= step.discription %>
          </p>
        <% end %>
      </div>
    </div>
  
    <div class="mt-5">
      <% if user_signed_in? %>
        <% if current_user.id == @recipe.user_id %>
          <%= link_to '削除', recipe_path(@recipe), method: :delete, class: 'text-danger mr-3', data: {confirm: '削除しますか？'} %>
          <%= link_to '編集', edit_recipe_path(@recipe) %>
        <% end %>
      <% end %>
    </div>
    
   <div class="recipe-tags mt-5">
      <h6 class="font-weight-bold">タグ</h6>
      <% if @recipe.tags.count == 0 %>
        タグはありません
      <% else %>
        <% @recipe.tags.each do |tag| %>
          <%= link_to tag.name, tag_path(tag) , class: "btn btn-outline-dark mt-3"%>
        <% end %>
      <% end %>
    </div>
      
     <div class="col-6">
        <% if user_signed_in? %>
          <% if @recipe.favorited_by?(current_user) %>
            <p>
              <%= link_to recipe_favorites_path(@recipe), method: :delete do %>
                ♥<%= @recipe.favorites.count %> いいね
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to recipe_favorites_path(@recipe), method: :post do %>
                ♡<%= @recipe.favorites.count %> いいね
              <% end %>
            </p>
          <% end %>
        <% else %>
          <%= "ログインしていいね・コメントを送ろう" %><br>
          <%= link_to "ログイン", new_user_session_path %>
        <% end %>
      </div>

      <div>
        <div>
          <h3>コメント</h3>
          <div>
            <% if user_signed_in? %>
              <%= form_with model: [@recipe, @comment] do |f| %>
                <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに" %>
                <%= f.submit "送信する" %>
              <% end %>
            <% end %>
          </div>
        </div>
       
        
        <div>
          <% @recipe.comments.each do |comment| %>
            <div>
              <div>
                <%= image_tag comment.user.get_profile_image(100,100) %>
                <%= comment.comment %>
              </div>
              <div class="font-weight-bold">
                <%= comment.user.user_name %>
              </div>
              <div>
                
              </div>
              <div>
                <%= comment.created_at.strftime('%Y/%m/%d') %>
                <% if comment.user === current_user %>
                  <%= link_to "削除", recipe_comment_path(comment.recipe,comment), method: :delete %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>